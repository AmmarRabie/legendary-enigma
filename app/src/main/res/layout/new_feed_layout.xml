<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.activities.MainActivity"

    android:layout_margin="8dp"
    android:layout_marginBottom="8dp"
    android:background="#ffffff"
    android:paddingBottom="8dp">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginBottom="8dp"
        android:background="#ffffff"
        android:orientation="vertical"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/newFeedLayout_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="26sp"
            android:textStyle="bold"
            tools:text="ammar alsayed ibrahim" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/newFeedLayout_cntLabel"
            tools:text="lec3"
            android:textSize="20sp"
            />

        <!--here put the commented linear layout-->
    </LinearLayout>

    <com.google.android.youtube.player.YouTubeThumbnailView
        android:id="@+id/newFeedLayout_YouTubeThumbnailView"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true">
    </com.google.android.youtube.player.YouTubeThumbnailView>

    <TextView
        android:id="@+id/newFeedLayout_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/newFeedLayout_YouTubeThumbnailView"
        android:layout_gravity="end"
        android:gravity="end"
        android:paddingEnd="8dp"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:paddingTop="8dp"
        android:textColor="#394048"
        tools:text="12/12/2012" />


</RelativeLayout>
