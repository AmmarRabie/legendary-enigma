<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#629be4"
    android:orientation="vertical"
    android:paddingBottom="12dp"
    android:paddingLeft="8dp"
    android:layout_marginBottom="12dp"
    android:id="@+id/answer_item">


    <TextView
        android:id="@+id/answerLayout_answerContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="26sp"
        android:textStyle="bold"
        tools:text=" my answer" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



        <TextView
            android:id="@+id/answerLayout_replyingDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="8dp"
            tools:text="12/6" />

    </LinearLayout>

    <TextView
        android:id="@+id/answerLayout_replyierEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#4d5050"
        tools:text="ramy.m.saied@gmail.com" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:id="@+id/answerLayout_vote"
        android:text="Vote"/>

</LinearLayout>