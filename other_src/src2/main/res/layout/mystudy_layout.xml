<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#629be4"
    android:orientation="vertical"
    android:paddingBottom="12dp"
    android:paddingLeft="8dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Courselabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="26sp"
            android:textStyle="bold"
            tools:text="DataBase" />
        <!--android:drawableRight="@android:drawable/ic_delete"-->

        <ImageView
            android:id="@+id/mystudy_layout_imageDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|end"

            android:src="@android:drawable/ic_menu_delete"

            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/CourseUni"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="8dp"
            android:textColor="#282a2a"
            tools:text="Cairo university"

            />

        <TextView
            android:id="@+id/Coursefac"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="8dp"
            tools:text="faculty of engineering" />

        <TextView
            android:id="@+id/Coursedep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="8dp"
            tools:text="CMP" />

    </LinearLayout>

    <TextView
        android:id="@+id/Coursedescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#4d5050"
        tools:text="introduction to database" />
</LinearLayout>